<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme adjustments for both day and night modes. -->
    <style name="Base.Theme.AndroidAbschluss" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Common customizations for both modes. -->
        <item name="android:statusBarColor">@color/colorPrimary5</item>
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorPrimary3</item>
        <item name="colorSecondary">@color/colorPrimary2</item>
        <item name="colorSecondaryVariant">@color/colorPrimary2</item>
        <item name="colorOnSecondary">@color/colorPrimary5</item>
        <item name="android:navigationBarColor">@color/colorPrimary5</item>
        <item name="colorSurface">@color/colorPrimary3</item>
        <item name="colorOnSurface">@color/colorPrimary3</item>
        <item name="android:textColor">@color/colorPrimary5</item>
        <!-- Spinner style for both day and night. Defined below. -->
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>
    </style>

    <!-- Custom style for Spinner. -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <!-- These are default settings, actual colors are changed in day/night specific themes below. -->
        <item name="android:popupBackground">?attr/colorSurface</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <!-- Application theme which applies customizations. -->
    <style name="Theme.AndroidAbschluss" parent="Base.Theme.AndroidAbschluss">
        <!-- Any additional customizations for your app's theme go here. -->
    </style>
</resources>

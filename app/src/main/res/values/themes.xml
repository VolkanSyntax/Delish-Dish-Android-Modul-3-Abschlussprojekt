<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Temel uygulama teması, hem gündüz hem de gece modları için ayarlamalar. -->
    <!-- Basisanwendungsthema-Einstellungen für sowohl Tag- als auch Nachtmodus. -->
    <style name="Base.Theme.AndroidAbschluss" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Her iki mod için ortak özelleştirmeler. -->
        <!-- Gemeinsame Anpassungen für beide Modi. -->
        <item name="android:statusBarColor">@color/colorPrimary5</item> <!-- Durum çubuğu rengi -->
        <item name="colorPrimary">@color/colorPrimary2</item> <!-- Birincil renk -->
        <item name="colorPrimaryVariant">@color/colorSecondary</item> <!-- Birincil rengin varyantı -->
        <item name="colorOnPrimary">@color/colorPrimary3</item> <!-- Birincil renk üzerindeki yazı rengi -->
        <item name="colorSecondary">@color/colorPrimary2</item> <!-- İkincil renk -->
        <item name="colorSecondaryVariant">@color/colorPrimary2</item> <!-- İkincil rengin varyantı -->
        <item name="colorOnSecondary">@color/colorPrimary5</item> <!-- İkincil renk üzerindeki yazı rengi -->
        <item name="android:navigationBarColor">@color/colorPrimary5</item> <!-- Navigasyon çubuğu rengi -->
        <item name="colorSurface">@color/colorPrimary3</item> <!-- Yüzey rengi -->
        <item name="colorOnSurface">@color/colorPrimary3</item> <!-- Yüzey üzerindeki yazı rengi -->
        <item name="android:textColor">@color/colorPrimary5</item> <!-- Genel yazı rengi -->
        <!-- Spinner stil tanımı, hem gündüz hem de gece için. Aşağıda tanımlanmıştır. -->
        <!-- Spinner-Stil für Tag und Nacht. Unten definiert. -->
        <item name="android:spinnerStyle">@style/CustomSpinnerStyle</item>
    </style>

    <!-- Özel Spinner stil tanımı. -->
    <!-- Benutzerdefinierter Stil für Spinner. -->
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.Underlined">
        <!-- Bunlar varsayılan ayarlar, gerçek renkler aşağıdaki gündüz/gece özel temalarda değiştirilir. -->
        <!-- Dies sind die Standardeinstellungen, tatsächliche Farben werden in den spezifischen Tag/Nacht-Themen unten geändert. -->
        <item name="android:popupBackground">?attr/colorSurface</item> <!-- Açılır menü arka planı -->
        <item name="android:textColor">?attr/colorOnSurface</item> <!-- Açılır menü yazı rengi -->
    </style>

    <!-- Uygulama teması, özelleştirmeler uygulanır. -->
    <!-- Anwendungsthema, das Anpassungen anwendet. -->
    <style name="Theme.AndroidAbschluss" parent="Base.Theme.AndroidAbschluss">
        <!-- Uygulamanızın teması için ek özelleştirmeler buraya girilir. -->
        <!-- Weitere Anpassungen für das Thema Ihrer App gehen hier. -->
    </style>
</resources>

<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.AndroidAbschluss" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorSecondary2</item>
        <item name="colorPrimaryVariant">@color/colorSecondary</item>
        <item name="colorOnPrimary">@color/colorPrimary3</item>
        <item name="colorSecondary">@color/colorPrimary2</item>
        <item name="colorSecondaryVariant">@color/colorPrimary2</item>
        <item name="colorOnSecondary">@color/colorPrimary5</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary3</item>
        <item name="colorOnSurface">@color/colorPrimary5</item>
        <item name="android:textColor">@color/colorPrimary5</item>
        <!-- Add other items that you need for your base theme -->
    </style>

    <!-- Style for Spinner that can be used for both day and night -->
    <style name="MySpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:popupBackground">?attr/colorSurface</item> <!-- For dropdown background -->
        <item name="android:textColor">?attr/colorOnSurface</item> <!-- For dropdown text color -->
    </style>


    <!-- Application theme -->
    <style name="Theme.AndroidAbschluss" parent="Base.Theme.AndroidAbschluss">
        <item name="android:spinnerStyle">@style/MySpinner</item>
        <!-- You can add other theme customizations here -->
    </style>
</resources>

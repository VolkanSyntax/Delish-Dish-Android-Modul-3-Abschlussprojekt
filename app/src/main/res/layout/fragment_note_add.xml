<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgbildauth"
    android:alpha="0.96"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <Spinner
        android:id="@+id/food_spinner"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="7dp"
        android:background="#CDFFFFFF"
        android:clickable="false"
        android:entries="@array/titel_array"
        android:outlineAmbientShadowColor="@color/delish_yellow"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="104dp"
        android:backgroundTint="@color/delish_yellow"
        android:text="@string/save_button"
        android:textColor="@color/delish_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_edit" />

    <Button
        android:id="@+id/cancel_button"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="3dp"
        android:backgroundTint="#2EB573"
        android:text="@string/cancel_button"
        android:textColor="@color/delish_white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_edit" />

    <EditText
        android:id="@+id/name_edit"
        android:layout_width="match_parent"
        android:layout_height="482dp"
        android:layout_marginTop="8dp"
        android:layout_margin="6dp"
        android:layout_marginEnd="6dp"
        android:background="@drawable/edittext_background"
        android:ems="10"
        android:gravity="top"
        android:hint="@string/start_typing_text"
        android:inputType="textMultiLine"
        android:lineSpacingMultiplier="1.0"
        android:textColor="@color/delish_black"
        android:textColorHint="#72414141"
        app:layout_constraintTop_toBottomOf="@+id/food_spinner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/materialToolbar"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:background="#C182AE32"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notes_title"
        android:layout_width="169dp"
        android:layout_height="57dp"
        android:fontFamily="@font/bungee_inline"
        android:text="@string/your_notes_Ã¼berschrift"
        android:textColor="@color/delish_yellow"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/materialToolbar"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>